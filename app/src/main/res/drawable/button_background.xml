<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="45"
                android:startColor="#6200EA"
                android:endColor="#DD2C00" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">

        <shape
            android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#304FFE"
                android:endColor="#DD2C00" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>