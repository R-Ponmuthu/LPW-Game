<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/app_background"
    android:orientation="horizontal"
    tools:context=".NumberGameActivity">

    <LinearLayout
        android:id="@+id/gameParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        tools:context=".NumberGameActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".NumberGameActivity">

            <kimjiome.library.luckywheel.LuckyWheelView
                android:id="@+id/luckyWheel1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                app:lkwBackgroundColor="#FF9800"
                app:lkwCenterImage="@drawable/wheel"
                app:lkwCursor="@drawable/ic_down_arrow"
                app:lkwTopTextColor="#263238" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".NumberGameActivity">

            <kimjiome.library.luckywheel.LuckyWheelView
                android:id="@+id/luckyWheel2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                app:lkwBackgroundColor="#FF9800"
                app:lkwCenterImage="@drawable/wheel"
                app:lkwCursor="@drawable/ic_down_arrow"
                app:lkwTopTextColor="#263238" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".NumberGameActivity">

            <kimjiome.library.luckywheel.LuckyWheelView
                android:id="@+id/luckyWheel3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                app:lkwBackgroundColor="#FF9800"
                app:lkwCenterImage="@drawable/wheel"
                app:lkwCursor="@drawable/ic_down_arrow"
                app:lkwTopTextColor="#263238" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/edittext_border"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/gameParent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="PLAY"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="@color/colorAccent" />

</RelativeLayout>